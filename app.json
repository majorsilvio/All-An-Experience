{
  "expo": {
    "name": "IFPE - All-An-Experience",
    "slug": "ifpeexperience",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "allanexperience",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Este aplicativo usa o Face ID para proteger e revelar seu recorde de jogo de forma segura."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      "expo-sqlite",
      "expo-font",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Permita que o aplicativo use o Face ID para proteger seu recorde."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
